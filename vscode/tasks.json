{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++",
            "type": "shell",
            "command": "g++ -std=c++11 -g \"${fileDirname}/${fileBasename}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" -lpthread  && \"${fileDirname}/${fileBasenameNoExtension}\"",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Build and Run C++ (Multiple cpp files)",
            "type": "shell",
            "command": "g++ -std=c++11 -g \"${fileDirname}\"/*.cpp -lpthread -o \"${fileDirname}/${fileBasenameNoExtension}\"  && \"${fileDirname}/${fileBasenameNoExtension}\"",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++ -std=c++11 -g \"${fileDirname}/${fileBasename}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" -lpthread",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Build C++ (Multiple cpp files)",
            "type": "shell",
            "command": "g++ -std=c++11 -g \"${fileDirname}\"/*.cpp -o \"${fileDirname}/${fileBasenameNoExtension}\" -lpthread",
            "group": "build",
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}